<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/r"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorIndivateTab"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorView"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:theme="@style/AppTheme.AppBarOverlay">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="?attr/actionBarSize"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                android:layout_alignParentStart="true"
                app:titleMarginStart="50dp"/>
            <ImageView
                android:id="@+id/imgBack"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/iconfinder_arrow_left"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="30dp"/>
            <ImageView
                android:id="@+id/imgVideoCall"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_video_call"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:visibility="gone"/>
        </RelativeLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.cardview.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/frameLayout"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:visibility="gone"
        android:layout_above="@+id/line"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp">
        <ImageView
            android:id="@+id/imgResultCamera"
            android:layout_width="150dp"
            android:layout_height="200dp"
            app:cardCornerRadius="10dp"
            android:scaleType="centerCrop"
            tools:ignore="MissingPrefix" />
    </androidx.cardview.widget.CardView>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@+id/appBar"
        android:id="@+id/recyclerChat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/line"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/layoutMicro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/line"
        android:visibility="gone"
        android:elevation="20dp"
        app:cardCornerRadius="15dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <TextView
            android:id="@+id/tvt_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="01 : 00"
            android:textColor="@color/grey_800"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp" />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgMicroOn"
            android:layout_centerInParent="true"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/iconfinder_miccro"
            android:visibility="visible"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/grey_500"
            app:civ_circle_background_color="@color/white"/>
    </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@id/btnSend"
        android:background="@color/grey_200" />
    <ImageButton
        android:id="@+id/btnSend"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:background="#00000000"
        android:padding="10dp"
        android:scaleType="centerInside"
        android:src="@drawable/send" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/btnSend"
        android:orientation="horizontal"
        android:layout_toRightOf="@+id/linearlayout2"
        android:gravity="center_vertical">
        <LinearLayout
            android:id="@+id/linearlayout3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/imgCamera"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/camera"
                android:fitsSystemWindows="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"/>
            <ImageView
                android:id="@+id/imgImage"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/image"
                android:fitsSystemWindows="true"
                android:layout_marginRight="15dp" />
            <ImageView
                android:id="@+id/imgMicro"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/micro"
                android:fitsSystemWindows="true"
                android:layout_marginRight="15dp"
                android:background="@drawable/animation_buton"/>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/r1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp">
            <hani.momanii.supernova_emoji_library.Helper.EmojiconEditText
                android:id="@+id/editWriteMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/botron_edittext"
                android:drawablePadding="20dp"
                android:hint="Aa"
                android:inputType="textLongMessage"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:textSize="15sp" />
            <ImageView
                android:id="@+id/imgSmile"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/smile"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/editWriteMessage"
                android:layout_marginLeft="-30dp"/>
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearlayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        android:layout_marginBottom="6dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow"
            android:fitsSystemWindows="true" />
    </LinearLayout>
</RelativeLayout>