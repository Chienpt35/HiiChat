<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.CallingActivity"
    android:background="@drawable/background_call">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_avatar"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/default_avata"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"/>
    <TextView
        android:id="@+id/tv_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_below="@+id/img_avatar"
        android:text="username"
        android:textSize="40dp"
        android:textColor="@color/colorWhite"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/tv_calling"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_below="@+id/tv_username"
        android:text="Calling..."
        android:textSize="30dp"
        android:textColor="@color/colorWhite"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/img_makeCall"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/make_call"
            android:visibility="gone"
            android:layout_marginRight="100dp"/>

        <ImageView
            android:id="@+id/img_cancelCall"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/cancel_call" />
    </LinearLayout>
</RelativeLayout>